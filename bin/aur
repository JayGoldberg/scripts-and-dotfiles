#!/bin/mksh
flags=()
prefix=aur@aur.archlinux.org:
for arg do
    case $arg in
        (--https) prefix=https://aur.archlinux.org/;;
        (--prefix=*) prefix=${arg#*=};;
        (-*) flags+=("$arg");;
        (*) break;;
    esac
    shift
done

for arg do git clone "${flags[@]}" "$prefix${arg#aur/}.git"; done
