#!/bin/sh
eval set -- "$(getopt -n bg-random -o n -l dry-run -- "$@")"
dry=false
while [ "$1" != -- ]; do
    case "$1" in
        -n|--dry-run) dry=true;;
    esac
    shift
done
shift

if [ "$#" = 0 ]; then
    set -- ~/img/wallpaper_safe
    hr=$(date +%H)
    [ "$hr" -lt 9 -o "$hr" -ge 18 ] &&
        set -- "$@" ~/img/wallpaper
fi
fn="$(find "$@" -type f -print0 | shuf --random-source=/dev/urandom -zn1 | tr -d \\0; echo x)"; fn=${fn%x}
if "$dry"
then echo "$fn"
else exec feh --bg-fill "$fn"
fi
